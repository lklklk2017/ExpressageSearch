<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/records_item"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/bg_color"
    android:gravity="center"
    >

    <!--图标-->
    <ImageView
        android:id="@+id/records_item_portrait_IMG"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:layout_marginLeft="10dp"
        android:src="@mipmap/ic_launcher" />
    <!--公司名-->
    <TextView
        android:id="@+id/records_item_compName_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/records_item_portrait_IMG"
        android:text="Express Name"
        android:textSize="17sp" />
    <!--最近的物流信息-->
    <TextView
        android:id="@+id/records_item_State_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/records_item_compName_TV"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/records_item_portrait_IMG"
        android:maxLines="2"


        android:text="state"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp" />

    <!--公司编号-->
    <TextView
        android:id="@+id/records_item_compCode_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/records_item_compName_TV"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/records_item_compName_TV"
        android:text="compCode"
        android:textSize="17sp" />

    <!--最后一次的时间-->
    <TextView
        android:id="@+id/records_item_time_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/records_item_compCode_TV"
        android:layout_marginRight="10dp"
        android:text="time" />

</RelativeLayout>